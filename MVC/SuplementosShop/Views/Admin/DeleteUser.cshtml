@using Microsoft.AspNetCore.Identity
@model IdentityUser
@{
    ViewData["Title"] = "DeleteUser";
}


<div class="card-body d-flex flex-column justify-content-center align-items-center">
    <h3>Are you sure you want to delete this user?</h3>
    <form method="post" asp-action="Delete" asp-controller="Admin" class="w-50">
        <input type="hidden" asp-for="Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="container" style="padding:30px">
            <div class="form-group mb-2">
                <label asp-for="UserName" class="form-label">UserName</label>
                <input asp-for="UserName" class="form-control border border-danger" type="text" readonly/>
                <span asp-validation-for="UserName" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control border border-danger" type="text" readonly/>
                <span asp-validation-for="Email" class="text-danger" />
            </div>
        </div>

        <div class="container" style="padding:30px">
            <div class="form-group d-flex justify-content-end gap-2">
                <a class="btn btn-secondary py-1 px-3 w-25" asp-controller="Admin" asp-action="Index">Cancel</a>
                <input type="submit" value="Delete" class="btn btn-danger form-control w-25" />                
            </div>
        </div> 
    </form>
</div>

