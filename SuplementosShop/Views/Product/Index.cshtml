@using SuplementosShop.Entities
@model ICollection<Product>;

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-baseline">
<h1>Products</h1>

<a class="btn btn-primary" asp-controller="Product" asp-action="AddProduct">
    Add product
</a>
</div>

@if (Model.Count() > 0)
    {
    <div class="card-body">
    
        <table class="table border table-borderless ">
            <tr class="table-secondary">
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Image Url</th>
                <th>Price</th>
                <th class="text-center">Category Id</th>
                <th></th>
                <th></th>
            </tr>

            @foreach (var cat in Model)
            {
                <tr>
                    <td>@cat.Id</td>
                    <td>@cat.Name</td>
                    <td>@cat.Description</td>
                    <td>@cat.ImageUrl</td>
                    <td>@cat.Price</td>
                    <td class="text-center">@cat.CategoryId</td>
                    <td><a class="btn btn-warning py-1 px-3" asp-controller="Product" asp-action="EditProduct" asp-route-id="@cat.Id">Edit</a></td>
                    <td><a class="btn btn-danger py-1 px-3" asp-controller="Product" asp-action="DeleteProduct" asp-route-id="@cat.Id">Delete</a></td>
                </tr>
            }
        </table>


    
    </div> } else {<h5 class="text-warning">No products yet!</h5>}