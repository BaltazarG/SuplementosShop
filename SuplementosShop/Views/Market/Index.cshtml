@using SuplementosShop.Entities

@model ICollection<Product>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Market</h1>

    @if(Model.Count() > 0)
    {
        <div class="">
            <div class="row row-cols-3 ">
                @foreach (var prod in Model)
                {
            
                         <div class="col mb-2">
                             <div class="card" style="width: 18rem;">
                                <img src=@prod.ImageUrl class="card-img-top" height="250" alt=@prod.Name>
                                <div class="card-body">
                                    <h5 class="fw-bold">$@prod.Price</h5>
                                    <h5 class="card-title">@prod.Name</h5>
                                    <p class="card-text">@prod.Description</p>
                                    <btn class="btn btn-primary">Add to cart</btn>
                                </div>
                             </div>
                        </div>
               
                } 
            </div>
        </div>
    } else {<h5 class="text-warning">No products yet!</h5>}

