@model LoginModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Authentication</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/css/FullPage.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <div class="main-container bg-dark d-flex justify-content-center align-items-center flex-column">
        <form class="w-25 align-items-center" method="post" asp-controller="Auth" asp-action="Login">
          <div asp-validation-summary="ModelOnly" class="text-danger"></div>
          <h2 class="text-light fw-bold mb-3">Login</h2>
          <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label text-light">Username</label>
            <input type="text" class="form-control" asp-for="Username">
            <span asp-validation-for="Username" class="text-danger"></span>
          </div>
          <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label text-light">Password</label>
            <input type="password" class="form-control" asp-for="Password">
             <span asp-validation-for="Password" class="text-danger"></span>
          </div>
          <div class=" d-flex justify-content-between gap-2 align-items-baseline">
           <a class="text-primary text-decoration-none fs-6 fst-italic" asp-controller="Auth" asp-action="SignUp">Create Account</a>
           <button type="submit" class="btn btn-primary">Sign In</button>
          </div>
          
        </form>
    </div>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
