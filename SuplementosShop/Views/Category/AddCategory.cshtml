@using SuplementosShop.Entities
@model Category

@{
    ViewData["Title"] = "AddCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Add Category</h1>

<div class="card-body">
    <form method="post" asp-action="Add" asp-controller="Category">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="container" style="padding:30px">
            <div class="form-group">
                <label asp-for="Name" class="form-label">Name</label>
                <input asp-for="Name" class="form-control" type="text" />
                <span asp-validation-for="Name" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="ShortDescription" class="form-label">Short Description</label>
                <input asp-for="ShortDescription" class="form-control" type="text" />
                <span asp-validation-for="ShortDescription" class="text-danger" />
            </div>
        </div>

        <div class="container" style="padding:30px">
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-success form-control" />
            </div>
        </div> 
    </form>
</div>