@using SuplementosShop.Entities
@model Category

@{
    ViewData["Title"] = "EditCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit Category</h1>


<div class="card-body">
    <form method="post" asp-action="Edit" asp-controller="Category">
        <input type="hidden" asp-for="Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="container" style="padding:30px">
            <div class="form-group">
                <label asp-for="Name" class="form-label">Name</label>
                <input asp-for="Name" class="form-control" type="text" />
                <span asp-validation-for="Name" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="ShortDescription" class="form-label">Description</label>
                <input asp-for="ShortDescription" class="form-control" type="text" />
                <span asp-validation-for="ShortDescription" class="text-danger" />
            </div>
        </div>


        <div class="container" style="padding:30px">
            <div class="form-group d-flex justify-content-end gap-2">
                <a class="btn btn-secondary py-1 px-3 w-25" asp-controller="Category" asp-action="Index">Cancel</a>
                <input type="submit" value="Edit" class="btn btn-success form-control  form-control w-25" />
            </div>
        </div> 
    </form>
</div>

