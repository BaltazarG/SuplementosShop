@using SuplementosShop.Entities
@model ICollection<Category>;

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-baseline">
<h4>Categories</h4>

<a class="btn btn-primary" asp-controller="Category" asp-action="AddCategory">
    Add category
</a>
</div>

@if (Model.Count() > 0)
    {
    <div class="mt-2">
    
        <table class="table table-borderless  table-hover border">
            <tr class="table-secondary">
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th></th>
                <th></th>
            </tr>

            @foreach (var cat in Model)
            {
                <tr>
                <td>@cat.Id</td>
                <td>@cat.Name</td>
                <td>@cat.ShortDescription</td>
                <td><a class="btn btn-warning py-1 px-3" asp-controller="Category" asp-action="EditCategory" asp-route-id="@cat.Id" >Edit</a></td>
                <td><a class="btn btn-danger py-1 px-3" asp-controller="Category" asp-action="DeleteCategory" asp-route-id="@cat.Id" >Delete</a></td>
                </tr>
            }
        </table>


    
    </div> } else {<h5 class="text-warning">No categories yet!</h5>}